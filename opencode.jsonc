{
  "$schema": "https://opencode.ai/config.json",

  // Default interactive model
  "model": "anthropic/claude-sonnet-4-20250514",

  "agent": {
    "planner": {
      "description": "Read-only planner. Produces tasks.json from GOALS.md + repo state.",
      "model": "openai/gpt-5.1-codex",
      "prompt": "You are the Planner. You MUST be read-only. Output ONLY valid JSON for tasks, matching the schema in .agent/schema/tasks.schema.json. Use repo files as truth.",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },

    "builder": {
      "description": "Implements ONE task in its worktree and returns structured result JSON.",
      "model": "anthropic/claude-opus-4.1",
      "prompt": "You are the Builder. Implement exactly the assigned task in the current worktree. Run the task's test_cmd. Return a JSON result with fields specified in the task instructions.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },

    "reviewer": {
      "description": "Read-only reviewer. Checks diffs + test results and approves or requests fixes.",
      "model": "google/gemini-2.5-pro",
      "prompt": "You are the Reviewer. Read diffs + test logs + task results. Output JSON: {approve:boolean, issues:[...], followups:[...]}.",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },

    "integrator": {
      "description": "Conflict resolver used only when merges conflict.",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "You are the Integrator. Resolve merge conflicts safely, keep tests passing, minimal changes.",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },

  "default_agent": "builder"
}
